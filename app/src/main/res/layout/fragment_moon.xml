<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MoonFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/LATITUDE"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/latitude"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/LONGITUDE"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/longitude"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/MOONRISE"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/moonrise"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/MOONSET"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/moonset"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/NEW_MOON"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/newmoon"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>


            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/FULL_MOON"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/fullmoon"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/LUNAR_PHASE"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/lunarphase"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextColor"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="@string/DAY_MONTH_LUNAR"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/daylunar"
                    style="@style/TextColor"
                    android:gravity="end"
                    android:padding="3dip"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</FrameLayout>